<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ff2c2e31">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:src="@mipmap/main_title"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_above="@+id/nameEditText"
        android:layout_alignLeft="@+id/startImageButton"
        android:layout_alignStart="@+id/startImageButton"
        android:layout_marginBottom="15dp" />

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/startImageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/btn_blue_matte"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nameEditText"
        android:hint="@string/enter_name"
        android:background="#ff313338"
        android:textColor="#ffd6a72f"
        android:minHeight="50dp"
        android:textSize="25sp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignWithParentIfMissing="true"
        android:textColorHint="#c5bb4c2f"
        android:layout_above="@+id/startImageButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        />

</RelativeLayout>
